<UserControl x:Class="QRCodeGenerator.ShowWindowBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="24"
             Height="24">
    <Grid>
        <Button HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="0"
                Click="Button_Click"
                Width="24"
                Height="24"
                Style="{x:Null}"
                Background="Transparent"
                BorderThickness="0">
            <Image Source="pack://application:,,,/QRCodeGenerator;component/Images/app_icon.ico"
                   Width="24"
                   Height="24"
                   Stretch="Uniform" />
        </Button>
    </Grid>
</UserControl>